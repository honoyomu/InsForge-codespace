{
  "compilerOptions": {
    "lib": ["deno.window", "deno.worker"],
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["./**/*.ts", "./**/*.js"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["./**/*.ts", "./**/*.js"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
}